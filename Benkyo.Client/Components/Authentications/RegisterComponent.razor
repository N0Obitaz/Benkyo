@rendermode InteractiveWebAssembly
@inject AuthService auth
@inject User user

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
	<div class="max-w-md w-full space-y-8">
		<div>
			<h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
				Create your account
			</h2>
			<p class="mt-2 text-center text-sm text-gray-600">
				Already have an account?
				<a href="#" class="font-medium text-blue-600 hover:text-blue-500">Sign in</a>
			</p>
		</div>

		<div class="bg-white py-8 px-6 shadow-lg rounded-lg sm:px-10">
			<div class="space-y-6">
				<div>
					<label for="email" class="block text-sm font-medium text-gray-700 mb-1">
						Email address
					</label>
					<input @bind="user.Email"
						   type="email"
						   id="email"
						   placeholder="juandelacruz@gmail.com"
						   class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
				</div>

				<div>
					<label for="password" class="block text-sm font-medium text-gray-700 mb-1">
						Password
					</label>
					<input @bind="user.Password"
						   type="password"
						   id="password"
						   placeholder="********"
						   class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
				</div>

				<div>
					<label for="confirm-password" class="block text-sm font-medium text-gray-700 mb-1">
						Confirm Password
					</label>
					<input @bind="ConfirmPassword"
						   type="password"
						   id="confirm-password"
						   placeholder="********"
						   class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
				</div>

				<div>
					<button @onclick="HandleRegister"
							class="w-full flex justify-center py-2.5 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
						Register
					</button>
				</div>
			</div>

			@if (user.Uid != null)
			{
				<div class="mt-6 p-4 bg-green-50 border border-green-200 rounded-md">
					<p class="text-sm text-green-800 font-medium">Registration Successful!</p>
					<p class="text-sm text-gray-700 mt-1">User ID: <span class="font-mono">@user.Uid</span></p>
					<p class="text-sm text-gray-700">Email: <span class="font-mono">@user.Email</span></p>
				</div>
			}
		</div>
	</div>
</div>
@code {
	public string ConfirmPassword { get; set; } = string.Empty;

	private async Task HandleRegister()
	{
		if(ConfirmPassword != user.Password)
		{
			Console.WriteLine($"{ConfirmPassword} != {user.Password}");
			return;
		}

		user = await auth.RegisterAsync(user);
	}
}
