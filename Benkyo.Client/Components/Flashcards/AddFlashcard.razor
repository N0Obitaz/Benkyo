<h3>AddFlashcard</h3>
@inject FlashcardService flashcardService
@inject Flashcard flashcard

<div class="space-y-4 p-4">
    <input @bind="flashcard.Question" placeholder="Question" class="w-full p-2 border rounded" />
    <input @bind="flashcard.Answer" placeholder="Answer" class="w-full p-2 border rounded" />

    <button @onclick="CreateFlashcard" class="bg-blue-500 text-white px-4 py-2 rounded">
        Save Flashcard
    </button>
</div>

@code {
    private async Task CreateFlashcard()
    {
        await flashcardService.CreateFlashcardAsync(flashcard);
    }
	
}
