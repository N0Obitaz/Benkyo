@rendermode InteractiveWebAssembly
@inject Studyset studyset
@inject StudysetService studysetService
@inject ColorOptions colors


@if(selectedStudyset != null)
{
    <div class="@(IsOpenEdit ? "fixed" : "hidden") inset-0 z-50 flex items-center justify-center p-5 bg-black/45 backdrop-blur-sm transition-opacity duration-300"
         @onclick="CloseModal">

        <div class="bg-white rounded-3xl w-full max-w-[540px] shadow-2xl transform transition-all duration-300 @(IsOpenEdit ? "scale-100 opacity-100" : "scale-90 opacity-0")"
             @onclick:stopPropagation>

            <!-- Modal Header -->
            <div class="flex items-center justify-between px-10 pt-8 pb-6 border-b border-gray-200">
                <h2 class="text-3xl font-semibold text-gray-900 tracking-tight">Edit study set</h2>
                <button @onclick="CloseModal"
                        class="w-10 h-10 flex items-center justify-center rounded-xl hover:bg-gray-100 transition-colors duration-200"
                        aria-label="Close modal">
                    <svg class="w-5 h-5 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Modal Body -->
            <div class="px-10 py-8 pb-10">

                <!-- Study Set Name -->
                <div class="mb-7">
                    <label class="block text-sm font-semibold text-gray-900 mb-3 tracking-tight">
                        Study set name
                    </label>
                    <input type="text"
                           @bind="selectedStudyset.StudySetName"
                           placeholder="E.g. Enzymes"
                           class="w-full px-5 py-4 border-2 border-gray-200 rounded-2xl text-base text-gray-900 placeholder-gray-400 focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100 focus:outline-none transition-all duration-200" />
                    <button class="inline-flex items-center gap-2 mt-2 px-0 py-2 text-sm font-medium text-gray-600 hover:text-gray-800 transition-colors duration-200">
                        <span class="text-xl font-light">+</span>
                        <span>Add another</span>
                    </button>
                </div>

                <!-- Color Picker -->
                <div class="mb-9">
                    <label class="block text-sm font-semibold text-gray-900 mb-3 tracking-tight">
                        Colour
                    </label>
                    <div class="flex gap-3 flex-wrap">
                        @foreach (var studyColor in colors.Options)
                        {
                            var isSelected = SelectedColorId == studyColor.Id;

                            <button type="button"
                                    @onclick="() => SelectColor(studyColor.Id)"
                                    @onclick:stopPropagation
                                    class="w-12 h-12 rounded-full transition-all duration-200 hover:scale-110 relative flex items-center justify-center focus:outline-none @(isSelected ? "ring-2 ring-offset-2 ring-gray-400" : "")"
                                    style="background-color: @studyColor.Hex;">
                                @* Use Hex here *@

                                @if (isSelected)
                                {
                                    <div class="w-3 h-3 bg-white rounded-full shadow-sm"></div>
                                }
                            </button>
                        }
                    </div>
                </div>

                <!-- Submit Button -->
                <button @onclick="SubmitForm"
                        class="w-full px-5 py-4 bg-slate-600 text-white rounded-2xl text-base font-bold hover:bg-slate-700 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-slate-600/30 active:translate-y-0 transition-all duration-200 tracking-tight">
                    Add study set
                </button>

            </div>
        </div>
    </div>


}



@code {
    [Parameter]

    public Studyset? selectedStudyset { get; set; }
    [Parameter] 
    public bool IsOpenEdit { get; set; }

    [Parameter] 
    public EventCallback<bool> IsOpenEditChanged { get; set; }

    private string SelectedColorId { get; set; } = "blue";

    private void SelectColor(string colorName)
    {
        SelectedColorId = colorName;
        selectedStudyset.StudySetColor = colorName;
    }

    private string GetColorClasses(string colorName)
    {
        return SelectedColorId == colorName
            ? "border-[3px] border-transparent"
            : "border-[3px] border-transparent";
    }

    private async Task CloseModal()
    {
        IsOpenEdit = false;
        await IsOpenEditChanged.InvokeAsync(IsOpenEdit);
    }

    private async Task SubmitForm()
    {
        await studysetService.EditStudySetAsync(selectedStudyset);
    }
}
